{
  "name": "EvomatQ_server",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "description": "EvomatQ headless API server packaged with Electron",
  "author": "Batuhan Karakaya",
  "scripts": {
    "start": "node ./bin/www.js",
    "dev": "nodemon ./bin/www.js",
    "electron": "electron .",
    "dist": "electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.9.1",
    "mysql2": "^3.6.3"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.evomatq.server",
    "productName": "EvomatQ Server",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/",
        "filter": [
          "**/*.json"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "runAfterFinish": false
    }
  }
}